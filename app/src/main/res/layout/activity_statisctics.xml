<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.warrior.hangsu.administrator.mangaeasywatch.utils.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        app:left_background="@drawable/back"
        app:title_text="数据统计"
        app:title_textColor="#ffffff"
        app:topbar_background="@color/top_bar">

    </com.warrior.hangsu.administrator.mangaeasywatch.utils.TopBar>

    <com.warrior.hangsu.administrator.mangaeasywatch.brokenline.paint.BrokenLineView
        android:id="@+id/hpwn_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:axle_type="halfxy" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/medicinetitle_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/top_bar"
            android:gravity="center"
            android:text="漫画名称"
            android:textColor="@color/top_bar_text"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/top_bar_text" />

        <TextView
            android:id="@+id/medicinetitle_spec_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/top_bar"
            android:gravity="center"
            android:text="总页数"
            android:textColor="@color/top_bar_text"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/top_bar_text" />

        <TextView
            android:id="@+id/medicinetitle_dosage_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/top_bar"
            android:gravity="center"
            android:text="查词量"
            android:textColor="@color/top_bar_text"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/manga_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"></ListView>
</LinearLayout>