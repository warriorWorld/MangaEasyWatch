<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp"
    tools:context="${relativePackage}.${activityClass}">

    <TextView
        android:id="@+id/manga_name_roundtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/reptile_margin_t"
        android:gravity="center_horizontal"
        android:text="漫画："
        android:textSize="22sp" />

    <com.warrior.hangsu.administrator.mangaeasywatch.widght.RoundProgressBar
        android:id="@+id/download_progressbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/manga_name_roundtv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:max="100"
        android:progress="1"
        app:roundColor="#68a9abaa"
        app:roundProgressColor="@color/top_bar"
        app:roundWidth="30dp"
        app:textColor="@color/top_bar"
        app:textSize="24sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/download_progressbar"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/download_yet_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:text=""
            android:textSize="16sp" />
    </ScrollView>

</RelativeLayout>